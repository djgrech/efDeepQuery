query Orders($input1 : FilterInput) {
    orders(input: $input1) {
        id
        orderDate
        customer {
            firstName
            lastName
        }
        product {
            name
        }
    }
}


{
    "input1": {
        "filter": {
            "operator": "and",
            "groups": [
                {
                    "conditions": [
                        {
                            "field": "Product.Name",
                            "operator": {
                                "searchOperator": "equals",
                                "items": [
                                    "mouse",
                                    "monitor",
                                    "keyboard"
                                ]
                            }
                        },
                        {
                            "field": "OrderDate",
                            "operator": {
                                "searchOperator": "greaterThan",
                                "items": [
                                    "2024-02-15T00:00:00Z"
                                ]
                            }
                        },
                        {
                            "field": "OrderDate",
                            "operator": {
                                "searchOperator": "lessThan",
                                "items": [
                                    "2025-04-15T00:00:00Z"
                                ]
                            }
                        }
                    ],
					"groups": [
						{
							"operator": "or",
							"groups": [
								{
									"operator": "and",
									"conditions": [
										{
											"field": "Customer.FirstName",
											"operator": {
												"searchOperator": "equals",
												"items": [
													"Mary"
												]
											}
										},
										{
											"field": "Customer.LastName",
											"operator": {
												"searchOperator": "equals",
												"items": [
													"Smith"
												]
											}
										}
									]
								},
								{
									"operator": "and",
									"conditions": [
										{
											"field": "Customer.FirstName",
											"operator": {
												"searchOperator": "equals",
												"items": [
													"Joe"
												]
											}
										},
										{
											"field": "Customer.LastName",
											"operator": {
												"searchOperator": "equals",
												"items": [
													"Borg"
												]
											}
										}
									]
								},
								{
									"operator": "and",
									"conditions": [
										{
											"field": "Customer.FirstName",
											"operator": {
												"searchOperator": "equals",
												"items": [
													"Peter"
												]
											}
										}
									]
								}
							]
						}
					]
				}
            ]
        },
        "sort":[
            {
                "key": "Customer.FirstName",
                "value": "asc"
            },
            {
                "key": "orderDate",
                "value": "desc"
            }
        ]
    }
}

/*
SELECT [o].[Id], [o].[CustomerId], [o].[OrderDate], [o].[ProductId], [p].[Id], [p].[Name], [c].[Id], [c].[FirstName], [c].[LastName]
FROM [Orders] AS [o]
INNER JOIN [Products] AS [p] ON [o].[ProductId] = [p].[Id]
INNER JOIN [Customers] AS [c] ON [o].[CustomerId] = [c].[Id]
WHERE [p].[Name] IN (N'mouse', N'monitor', N'keyboard') AND [o].[OrderDate] > '2024-02-15T02:00:00.0000000+01:00' AND [o].[OrderDate] < '2025-04-15T04:00:00.0000000+02:00' AND (([c].[FirstName] = N'Mary' AND [c].[LastName] = N'Smith') OR ([c].[FirstName] = N'Joe' AND [c].[LastName] = N'Borg') OR [c].[FirstName] = N'Peter')
ORDER BY [c].[FirstName], [o].[OrderDate] DESC
*/